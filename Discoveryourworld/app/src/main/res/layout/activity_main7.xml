<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity7">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15sp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/sa" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/el_messiri"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginLeft="140dp"
        android:text="المملكة العربية السعودية" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:textSize="24sp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/el_messiri"
        android:layout_marginTop="70dp"
        android:textColor="#000000"
        android:layout_marginLeft="200dp"
        android:text="حكامها : ال سعود" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="290dp"
        android:textColor="#000000"
        android:textSize="25dp"
        android:fontFamily="@font/el_messiri"
        android:layout_height="wrap_content"
        android:text="الوصف : " />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="380dp"
        android:layout_height="134dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="240dp"
        android:fontFamily="@font/el_messiri"
        android:text="هي دولة عربية، وتعد أكبر دول الشرق الأوسط مساحة، وتقع تحديدًا في الجنوب الغربي من قارة آسيا وتشكل الجزء الأكبر من شبه الجزيرة العربية إذ تبلغ مساحتها حوالي مليوني كيلومتر مربع. يحدها من الشمال جمهورية العراق والأردن وتحدها دولة الكويت من الشمال الشرقي، ومن الشرق تحدها كل من دولة قطر والإمارات العربية المتحدة بالإضافة إلى مملكة البحرين التي ترتبط بالسعودية من خلال جسر الملك فهد الواقع على مياه الخليج العربي، ومن الجنوب تحدها اليمن، وسلطنة عُمان من الجنوب الشرقي، كما يحدها البحر الأحمر من جهة الغرب."
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="434dp"
        android:layout_marginTop="400dp"
        app:srcCompat="@drawable/sai" />

</RelativeLayout>